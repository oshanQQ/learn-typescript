<div class="main users-new">
  <div class="container">
    <h2 class="form-heading">アカウント編集</h2>
    <div class="form users-form">
      <div class="form-body">
        <% errors.forEach(error=> { %>
          <div class="form-error" data-test="error-<%= error.param %>"><%= error.msg %></div>
        <% }) %>
        <form action="/users/<%= user.id %>/update" method="POST" enctype="multipart/form-data" data-test="form">
          <label for="name">ユーザー名</label>
          <input id="name" type="text" name="name" value="<%= user.name %>" data-test="input-name">
          <label for="email">メールアドレス</label>
          <input id="email" type="email" name="email" value="<%= user.email %>" data-test="input-email">
          <label for="image">画像</label>
          <input id="image" type="file" name="image" data-test="input-image">
          <input type="submit" value="保存" data-test="submit">
        </form>
      </div>
    </div>
  </div>
</div>
