<div class="main users-new">
  <div class="container">
    <h2 class="form-heading">ログイン</h2>
    <div class="form users-form">
      <div class="form-body">
        <% errors.forEach(error=> { %>
          <div class="form-error" data-test="error-<%= error.param %>"><%= error.msg %></div>
        <% }) %>
        <form action="/signin" method="POST" data-test="form">
          <label for="email">メールアドレス</label>
          <input id="email" type="email" name="email" value="<%= email %>" data-test="input-email">
          <label for="password">パスワード</label>
          <input id="password" type="password" type="password" name="password" value="<%= password %>"
            autocomplete="off" data-test="input-password">
          <input type="submit" value="ログイン" data-test="submit">
        </form>
      </div>
    </div>
  </div>
</div>